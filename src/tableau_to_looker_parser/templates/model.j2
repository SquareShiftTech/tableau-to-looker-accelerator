# Generated LookML model
# Project: {{ project_name }}

connection: "{{ 'tableau_looker_poc' }}"

# Include all views
{% for view in views %}
include: "{{ view.name | clean_name }}.view.lkml"
{% endfor %}

# Include all dashboards
{% for dashboard in dashboards %}
{% if dashboard.name | clean_name == "connected_devices_detail" %}
include: "{{ dashboard.name | clean_name }}.dashboard.lookml"
{% endif %}
{% endfor %}

# Explores
{% for explore in explores %}

explore: {{ explore.name | clean_name }} {
  {% if explore.description %}
  description: "{{ explore.description }}"
  {% endif %}

  {% if explore.joins %}
  {% for join in explore.joins %}
  join: {{ join.view_name | clean_name }} {
    type: {{ join.type }}
    sql_on: {{ join.sql_on }} ;;
    {% if join.relationship %}
    relationship: {{ join.relationship }}
    {% endif %}
  }
  {% endfor %}
  {% endif %}
}
{% endfor %}
